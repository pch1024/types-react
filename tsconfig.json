{
  "compilerOptions": {
    "target": "es5",
    "declaration": false,
    "moduleResolution": "node",
    "outDir": "./dist/", 
    "module": "ESNext",
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "noLib": false,
    "lib": [
      "dom",
      "es2015"
    ],
    "jsx": "react",
    "suppressImplicitAnyIndexErrors": true
  },
  "compileOnSave": false,
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}